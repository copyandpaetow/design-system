---
import { titleToId } from "../utils/element-ids";

interface Props {
	title: string;
}

const { title } = Astro.props;
const id = titleToId(title);
---

<fieldset id={id}>
	<legend>{title}</legend>
	<slot />
</fieldset>

<style>
	fieldset {
		padding: 1rem;
		display: flex;
		gap: 8px;
		flex-wrap: wrap;
		align-items: center;
	}
</style>
