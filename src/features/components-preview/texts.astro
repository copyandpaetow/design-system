---
import ContentBox from "../../components/content-box.astro";

export const title = "Texts";
---

<ContentBox title={title}>
	<p>normal text</p>
	<span>inline text</span>
	<a>Anchor</a>
	<em>Emphasis</em>
	<small>Small</small>
	<strong>Strong</strong>
	<u>Underline</u>
	<abbr>abbr</abbr>
	<del>deletion</del>
	<ins>insertion</ins>
	<kbd>keyboard shortcut</kbd>
	<mark>highlighted</mark>
	<s>striked through</s>
	<sub>sub</sub>
	<sup>sup</sup>

	<blockquote>
		“Design is a funny word. Some people think design means how it looks. But of course, if you dig
		deeper, it's really how it works.”
		<footer>
			<cite>— Steve Jobs</cite>
		</footer>
	</blockquote>
</ContentBox>
